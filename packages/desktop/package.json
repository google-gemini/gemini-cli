{
  "name": "@google/gemini-cowork-desktop",
  "version": "0.1.0",
  "description": "Gemini Cowork â€” Desktop GUI (Electron + React + Tailwind)",
  "license": "Apache-2.0",
  "private": true,
  "type": "module",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build && electron-builder",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "start": "electron .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@google/gemini-cowork": "file:../cowork",
    "@xterm/xterm": "^5.5.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "framer-motion": "^11.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "lucide-react": "^0.441.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "electron": "^31.0.0",
    "electron-builder": "^25.0.0",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "engines": {
    "node": ">=20"
  },
  "build": {
    "appId": "com.google.gemini-cowork-desktop",
    "productName": "Gemini Cowork",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist/**",
      "dist-electron/**"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    }
  }
}
