{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Electron app for gemini-cli",
  "homepage": "./",
  "author": {
    "name": "Google",
    "email": "gemini-cli@google.com"
  },
  "workspaces": [
    "*"
  ],
  "type": "module",
  "main": "out/main/index.cjs",
  "scripts": {
    "dev": "npx electron-vite dev",
    "build": "npm run build:all --prefix ../.. && npx electron-vite build",
    "start": "npx electron-vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "preflight": "npm run lint && npm run build && npm run typecheck && npm run test",
    "clean": "rm -rf dist out"
  },
  "dependencies": {
    "@google/gemini-cli": "file:../cli",
    "@google/gemini-cli-core": "file:../core",
    "@monaco-editor/react": "^4.7.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "chokidar": "^4.0.3",
    "electron-log": "^5.4.3",
    "electron-store": "^8.2.0",
    "lucide-react": "^0.539.0",
    "monaco-editor": "^0.52.2",
    "node-pty": "^1.1.0-beta34",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.1.1",
    "electron": "^39.0.0",
    "electron-vite": "^4.0.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^3.2.4"
  },
  "build": {
    "productName": "Gemini CLI",
    "appId": "com.google.gemini-cli",
    "directories": {
      "output": "dist/electron"
    },
    "asarUnpack": [
      "**/node_modules/node-pty/**",
      "**/node_modules/ajv/**/*"
    ],
    "files": [
      "out/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../../bundle",
        "to": "bundle"
      },
      {
        "from": "dist/cli",
        "to": "cli"
      },
      {
        "from": "dist/core",
        "to": "core"
      },
      {
        "from": "src/resources",
        "to": "resources"
      }
    ],
    "mac": {
      "icon": "src/resources/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "src/resources/icon.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "src/resources/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
