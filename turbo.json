{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "generate": {
      "cache": true,
      "outputs": [
        "packages/cli/src/generated/**",
        "packages/core/src/generated/**"
      ]
    },
    "build": {
      "dependsOn": ["^build", "^generate"],
      "outputs": ["dist/**"]
    },
    "bundle": {
      "dependsOn": ["^build"],
      "outputs": ["bundle/**", "packages/*/bundle/**"]
    },
    "lint": {
      "dependsOn": []
    },
    "format": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:ci": {
      "dependsOn": ["^build"]
    },
    "test:scripts": {
      "dependsOn": []
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "preflight": {
      "dependsOn": ["lint", "typecheck", "test", "build"]
    }
  }
}
